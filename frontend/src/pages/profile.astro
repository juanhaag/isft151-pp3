---
import Layout from '../layouts/Layout.astro';
import { User, FileText, Share2, Calendar, MapPin } from 'lucide-astro';

// Enable server-side rendering for this page
export const prerender = false;
---

<Layout title="Mi Perfil - OlasPP">
  <div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-cyan-50 py-20 px-4">
    <div class="max-w-6xl mx-auto">
      <!-- Profile Header -->
      <div class="bg-white rounded-2xl shadow-lg p-8 mb-8">
        <div class="flex items-center space-x-6">
          <div class="bg-gradient-to-br from-blue-500 to-cyan-500 rounded-full p-6">
            <User class="h-16 w-16 text-white" />
          </div>
          <div class="flex-1">
            <h1 class="text-3xl font-bold text-gray-900" id="user-name">Cargando...</h1>
            <p class="text-gray-600 mt-1" id="user-email"></p>
            <div class="mt-4 flex items-center space-x-6 text-sm text-gray-500">
              <div class="flex items-center space-x-2">
                <FileText class="h-4 w-4" />
                <span><span id="total-reports" class="font-semibold text-blue-600">0</span> reportes</span>
              </div>
              <div class="flex items-center space-x-2">
                <Calendar class="h-4 w-4" />
                <span>Miembro desde <span id="member-since">-</span></span>
              </div>
            </div>
          </div>
          <button
            onclick="logout()"
            class="bg-red-500 hover:bg-red-600 text-white px-6 py-2 rounded-lg transition-colors"
          >
            Cerrar Sesión
          </button>
        </div>
      </div>

      <!-- Reports Section -->
      <div class="bg-white rounded-2xl shadow-lg p-8">
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-2xl font-bold text-gray-900">Mis Reportes</h2>
          <a
            href="/#reportes"
            class="bg-gradient-to-r from-blue-600 to-cyan-600 hover:from-blue-700 hover:to-cyan-700 text-white px-4 py-2 rounded-lg transition-all"
          >
            + Nuevo Reporte
          </a>
        </div>

        <div id="loading" class="text-center py-12">
          <div class="inline-block animate-spin rounded-full h-12 w-12 border-4 border-blue-500 border-t-transparent"></div>
          <p class="mt-4 text-gray-600">Cargando tus reportes...</p>
        </div>

        <div id="no-reports" class="hidden text-center py-12">
          <FileText class="h-16 w-16 text-gray-300 mx-auto mb-4" />
          <p class="text-gray-600 mb-4">Aún no tienes reportes generados</p>
          <a
            href="/#reportes"
            class="inline-block bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg transition-colors"
          >
            Generar mi primer reporte
          </a>
        </div>

        <div id="reports-grid" class="hidden grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Reports will be inserted here dynamically -->
        </div>
      </div>
    </div>

    <!-- Share Modal -->
    <div id="share-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
      <div class="bg-white rounded-2xl p-8 max-w-md w-full mx-4">
        <h3 class="text-2xl font-bold text-gray-900 mb-4">Compartir Reporte</h3>
        <p class="text-gray-600 mb-4">Comparte este reporte copiando el enlace:</p>
        <div class="flex items-center space-x-2">
          <input
            type="text"
            id="share-link"
            readonly
            class="flex-1 p-3 border border-gray-300 rounded-lg bg-gray-50"
          />
          <button
            onclick="copyShareLink()"
            class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-3 rounded-lg transition-colors whitespace-nowrap"
          >
            Copiar
          </button>
        </div>
        <button
          onclick="closeShareModal()"
          class="w-full mt-4 bg-gray-200 hover:bg-gray-300 text-gray-800 px-4 py-2 rounded-lg transition-colors"
        >
          Cerrar
        </button>
      </div>
    </div>
  </div>
</Layout>

<script>
  const API_URL = import.meta.env.PUBLIC_API_URL || 'http://localhost:3000';
  let currentShareLink = '';

  interface UserData {
    id: number;
    username: string;
    email: string;
    created_at: string;
  }

  interface Report {
    id: string;
    spot_id: string;
    ai_analysis: any;
    weather_data: any;
    created_at: string;
  }

  // Check if user is logged in
  function checkAuth(): UserData | null {
    const userStr = localStorage.getItem('user');
    if (!userStr) {
      window.location.href = '/';
      return null;
    }
    return JSON.parse(userStr);
  }

  // Load user profile and reports
  async function loadProfile() {
    const user = checkAuth();
    if (!user) return;

    // Update user info
    document.getElementById('user-name')!.textContent = user.username;
    document.getElementById('user-email')!.textContent = user.email;

    const memberSince = new Date(user.created_at).toLocaleDateString('es-ES', {
      year: 'numeric',
      month: 'long'
    });
    document.getElementById('member-since')!.textContent = memberSince;

    // Load reports
    try {
      const response = await fetch(`${API_URL}/api/profile/${user.id}/reports`);
      const result = await response.json();

      const loadingDiv = document.getElementById('loading')!;
      const noReportsDiv = document.getElementById('no-reports')!;
      const reportsGrid = document.getElementById('reports-grid')!;

      loadingDiv.classList.add('hidden');

      if (!result.success || result.data.reports.length === 0) {
        noReportsDiv.classList.remove('hidden');
        return;
      }

      // Update total reports
      document.getElementById('total-reports')!.textContent = result.data.totalReports.toString();

      // Display reports
      reportsGrid.classList.remove('hidden');
      reportsGrid.innerHTML = result.data.reports.map((report: Report) => createReportCard(report)).join('');
    } catch (error) {
      console.error('Error loading reports:', error);
      document.getElementById('loading')!.innerHTML = `
        <p class="text-red-600">Error al cargar los reportes. Por favor intenta de nuevo.</p>
      `;
    }
  }

  function createReportCard(report: Report): string {
    const date = new Date(report.created_at).toLocaleDateString('es-ES', {
      day: 'numeric',
      month: 'short',
      year: 'numeric'
    });

    const summary = report.ai_analysis?.summary || report.ai_analysis?.recommendation || 'Reporte generado';
    const bestDay = report.ai_analysis?.best_day || 'N/A';
    const rating = report.ai_analysis?.rating || 3;
    const stars = '⭐'.repeat(rating);

    return `
      <div class="bg-gradient-to-br from-blue-50 to-cyan-50 rounded-xl p-6 border-2 border-blue-100 hover:border-blue-300 transition-all">
        <div class="flex items-start justify-between mb-4">
          <div class="flex-1">
            <h3 class="font-semibold text-gray-900 text-lg mb-1">${report.spot_id.replace(/_/g, ' ')}</h3>
            <p class="text-sm text-gray-600 flex items-center">
              <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              ${date}
            </p>
          </div>
          <button
            onclick="shareReport('${report.id}')"
            class="p-2 hover:bg-blue-100 rounded-lg transition-colors"
            title="Compartir"
          >
            <svg class="h-5 w-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"></path>
            </svg>
          </button>
        </div>

        <div class="space-y-3">
          <div class="bg-white rounded-lg p-3">
            <p class="text-sm font-medium text-gray-700 mb-1">Calificación</p>
            <p class="text-lg">${stars}</p>
          </div>

          ${bestDay !== 'N/A' ? `
          <div class="bg-green-50 rounded-lg p-3 border border-green-200">
            <p class="text-sm font-medium text-green-800 mb-1">Mejor día</p>
            <p class="text-sm text-green-700">${bestDay}</p>
          </div>
          ` : ''}

          <div class="bg-white rounded-lg p-3">
            <p class="text-sm text-gray-600 line-clamp-3">${summary}</p>
          </div>
        </div>

        <button
          onclick="viewReport('${report.id}')"
          class="w-full mt-4 bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors"
        >
          Ver Reporte Completo
        </button>
      </div>
    `;
  }

  function shareReport(reportId: string) {
    const shareUrl = `${window.location.origin}/report/${reportId}`;
    currentShareLink = shareUrl;

    const modal = document.getElementById('share-modal')!;
    const input = document.getElementById('share-link') as HTMLInputElement;

    input.value = shareUrl;
    modal.classList.remove('hidden');
  }

  function closeShareModal() {
    document.getElementById('share-modal')!.classList.add('hidden');
  }

  function copyShareLink() {
    const input = document.getElementById('share-link') as HTMLInputElement;
    input.select();
    navigator.clipboard.writeText(input.value);

    alert('¡Enlace copiado al portapapeles!');
  }

  function viewReport(reportId: string) {
    window.location.href = `/report/${reportId}`;
  }

  function logout() {
    localStorage.removeItem('user');
    localStorage.removeItem('token');
    window.location.href = '/';
  }

  // Make functions global
  window.shareReport = shareReport;
  window.closeShareModal = closeShareModal;
  window.copyShareLink = copyShareLink;
  window.viewReport = viewReport;
  window.logout = logout;

  // Load profile on page load
  loadProfile();
</script>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
</Layout>
