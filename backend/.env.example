# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/surfdb
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=username
DB_PASSWORD=password
DB_DATABASE=surfdb

# Server Configuration
PORT=3000

# AI Provider Configuration
# Options: "gemini" or "ollama"
AI_PROVIDER=ollama

# Gemini Configuration (if using AI_PROVIDER=gemini)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# Ollama Configuration (if using AI_PROVIDER=ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b

# Weather APIs
OPEN_METEO_MARINE_URL=https://marine-api.open-meteo.com/v1/marine
OPEN_METEO_FORECAST_URL=https://api.open-meteo.com/v1/forecast

# Other APIs
API_KEY=your_api_key_here
LOCATION_IQ_KEY=your_location_iq_key_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h