{
  "name": "surf-report-api",
  "version": "1.0.0",
  "description": "API for generating surf reports using external APIs and AI",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "typecheck": "tsc --noEmit",
    "seed": "ts-node src/scripts/seedSpots.ts",
    "seed:spots": "ts-node src/scripts/seedSpots.ts",
    "test:ollama": "ts-node src/scripts/testOllama.ts",
    "db:seed": "ts-node src/scripts/seedData.ts",
    "db:sync": "ts-node -e \"import('./src/config/database').then(db => db.initializeDatabase())\"",
    "db:init": "npm run db:sync && npm run seed:spots",
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose down",
    "db:logs": "docker-compose logs -f",
    "db:reset": "docker-compose down -v && docker-compose up -d",
    "db:create-postgis-functions": "ts-node src/scripts/createPostGISFunctions.ts",
    "migration:generate": "ts-node ./node_modules/typeorm/cli.js migration:generate -d ormconfig.ts",
    "migration:create": "ts-node ./node_modules/typeorm/cli.js migration:create",
    "migration:run": "ts-node src/scripts/runMigrations.ts",
    "migration:revert": "ts-node ./node_modules/typeorm/cli.js migration:revert -d ormconfig.ts",
    "migration:show": "ts-node ./node_modules/typeorm/cli.js migration:show -d ormconfig.ts",
    "setup": "bash scripts/setup.sh",
    "setup:windows": "powershell -ExecutionPolicy Bypass -File scripts/setup.ps1",
    "setup:win": "scripts\\setup.bat",
    "setup:quick": "npm install && npm run db:start && npm run migration:run"
  },
  "dependencies": {
    "@types/cookie-parser": "^1.4.9",
    "axios": "^1.6.0",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.8.0",
    "@types/pg": "^8.10.7",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
