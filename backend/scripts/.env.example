# ==================== DATABASE CONFIGURATION ====================
DATABASE_URL=postgresql://postgres:olaspp_password@localhost:5434/olaspp
DB_HOST=localhost
DB_PORT=5434
DB_USERNAME=postgres
DB_PASSWORD=olaspp_password
DB_NAME=olaspp

# ==================== SERVER CONFIGURATION ====================
PORT=3000
NODE_ENV=development

# AI Provider Configuration
# Options: "gemini" or "ollama"
AI_PROVIDER=ollama

# Gemini Configuration (if using AI_PROVIDER=gemini)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# Ollama Configuration (if using AI_PROVIDER=ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b

# Weather APIs
OPEN_METEO_MARINE_URL=https://marine-api.open-meteo.com/v1/marine
OPEN_METEO_FORECAST_URL=https://api.open-meteo.com/v1/forecast

# Other APIs
API_KEY=your_api_key_here
LOCATION_IQ_KEY=your_location_iq_key_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# ==================== VECTORIZATION & EMBEDDINGS ====================

# Embedding Model Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSIONS=384

# Embedding Provider Options:
# Option 1: Use Ollama locally (FREE, recommended)
USE_LOCAL_EMBEDDINGS=true
# Make sure you have ollama running and model installed:
# ollama pull nomic-embed-text

# Option 2: Use Hugging Face API (FREE with rate limits)
# USE_LOCAL_EMBEDDINGS=false
# HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Option 3: Fallback to simple embeddings (no external dependencies)
# Just leave USE_LOCAL_EMBEDDINGS and HUGGINGFACE_API_KEY empty